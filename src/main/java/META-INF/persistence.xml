<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <mapping-file>META-INF/UsersEntity.xml</mapping-file>
        <mapping-file>META-INF/RoleEntity.xml</mapping-file>
        <mapping-file>META-INF/UserRolesEntity.xml</mapping-file>
        <mapping-file>META-INF/ContactEntity.xml</mapping-file>
        <mapping-file>META-INF/ContactLogEntity.xml</mapping-file>
        <class>system.dao.entity.UsersEntity</class>
        <class>system.dao.entity.RoleEntity</class>
        <class>system.dao.entity.UserRolesEntity</class>
        <class>system.dao.entity.ContactEntity</class>
        <class>system.dao.entity.ContactLogEntity</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/Contacts"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/Contacts"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/Contacts"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/Contacts"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
